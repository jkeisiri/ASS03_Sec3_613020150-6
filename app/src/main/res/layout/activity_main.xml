<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bgnew"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg"
        android:scaleType="centerCrop"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❤ Happy Birthday to Phuwanai ❤ "
        android:textSize="20sp"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="#DA99EC"
        android:text="มีความสุขมากๆนะครับ"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="#DA99EC"
            android:text="  ขอให้มีสุขภาพร่างกายเเข็งแรง"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="#DA99EC"
            android:text=" คิดอะไรก็ขอให้สมหวังตามปราถนา"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"/>



        <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/hbd" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_above="@+id/textView"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/bg3" />

    </RelativeLayout>
</RelativeLayout>